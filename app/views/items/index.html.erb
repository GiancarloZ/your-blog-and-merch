<%= link_to 'Back', url_for(:back) %><br>
<h1>Items For Sale </h1> 
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr> 
      <td><strong>Name</strong></td>
      <td><strong>Price</strong></td>
      <td><strong>Add To Cart</strong></td>
    </tr>

<% @items.each do |item| %>
    <tr>
        <td><%= link_to item.name, item_path(item) %>
        <td><%= item.price %>
        <td><%= link_to "Add", new_item_cart_item_path(item) %>
    </tr>
<% end %>
</tbody>
</table>
<br><br>

<%if current_user.admin %>
    <%= link_to "Add Item", new_item_path(@item) %>
<% end %>