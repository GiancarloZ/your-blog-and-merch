<h1>My Blog </h1>

<ul>
    <% @posts.each do |post| %>
        <li>
            <h3><%= link_to post.title, post_path(post) %></h3>
            <p><%= post.content %></p>
        </li>
    <%end%>
</ul><br>

<%if current_user.admin %>
    <%= link_to "Create New Blog Post", new_post_path(@post) %>
<% end %>